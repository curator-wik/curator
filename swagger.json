                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/FtpConfig"
                        }
                    }
                ],
                "responses": {
                    "405": {
                        "description": "Invalid input"
                    },
                    "403": {
                        "description": "Unauthorized"
                    }
                }
            }
        }
    },
